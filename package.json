{
  "name": "image-gallery",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ./src/js",
    "build:html": "cp ./src/index.html ./build/",
    "build:sass": "node-sass-chokidar --output-style compressed -o build/ src/sass && mv ./build/style.css ./build/style.min.css",
    "build:js": "webpack  --optimize-minimize",
    "build:all": "npm-run-all build:html build:sass build:js",
    "build": "npm run build:all",
    "watch:html": "onchange \"./src/index.html\" -- npm run build:html",
    "watch:sass": "onchange \"src/sass/*.scss\" -- npm run build:sass",
    "watch:js": "onchange \"./src/js/*js\" -- npm run build:js",
    "watch": "npm-run-all --parallel watch:html watch:sass watch:js ",
    "start": "npm run watch-css & webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oskarssylwan/image-gallery.git"
  },
  "author": "Oskars Sylwan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oskarssylwan/image-gallery/issues"
  },
  "homepage": "https://github.com/oskarssylwan/image-gallery#readme",
  "dependencies": {
    "eslint": "^4.15.0",
    "http-server": "^0.11.1",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "webpack": "^3.10.0"
  }
}
